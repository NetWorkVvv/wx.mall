.index_container {
  font-size: var(--fontSize);
}

/* 轮播图 */
.index_swiper swiper {
  width: 100vw;
  height: calc(100vw * 340 / 750);
}

.index_swiper image {
  width: 100%;
}

/* 导航 */
.index_bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;

}

.bar_nav {
  width: 140rpx;
  height: 140rpx;
}

.bar_nav image {
  width: 100%;
}

/* 楼层 */
.index_floor {
  padding: 15rpx 0;
}

.floor_group {
  padding: 15rpx 0;
}

.group_title image {
  width: 100%;
}

.group_content {
  /* 清除浮动 */
  overflow: auto;
}

.content_navigator {
  float: left;
  width: 33.3%;
}

/* content_navigator 的后四个样式 https://www.w3school.com.cn/tiy/t.asp?f=eg_css_sel_nth-last-child */
.content_navigator:nth-last-child(-n+4) {
  height: calc(33.3vw * 386 / 232 /2);
  border-left: 11rpx solid white;
}

/* 后面两个 */
.content_navigator:nth-last-child(-n+2) {
  border-top: 11rpx solid white;
}

.content_image {
  width: 100%;
  height: 100%;
}